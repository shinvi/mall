<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shinvi.mall.dao.OrderAlipayDoMapper">
    <resultMap id="BaseResultMap" type="com.shinvi.mall.pojo.domain.OrderAlipayDo">
        <constructor>
            <idArg column="order_no" javaType="java.lang.Long" jdbcType="BIGINT"/>
            <arg column="alipay_trade_no" javaType="java.lang.String" jdbcType="VARCHAR"/>
            <arg column="n" javaType="java.lang.Integer" jdbcType="INTEGER"/>
        </constructor>
    </resultMap>
    <sql id="Base_Column_List">
        order_no, alipay_trade_no, n
    </sql>
    <select id="selectByPrimaryKey" parameterType="long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from mmall_order_alipay
        where order_no = #{orderNo}
    </select>
    <select id="selectByAlipayTradeNo" parameterType="string" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from mmall_order_alipay
        where alipay_trade_no = #{alipayTradeNo}
    </select>
    <delete id="deleteByPrimaryKey" parameterType="long">
        delete
        from mmall_order_alipay
        where order_no = #{orderNo}
    </delete>
    <insert id="insert" parameterType="long">
        insert into mmall_order_alipay (order_no, alipay_trade_no, n, create_time, update_time)
        values (#{orderNo}, CONCAT_WS('_', #{orderNo}, 0), 0, now(), now())
    </insert>

    <update id="updateByPrimaryKey" parameterType="long">
        update mmall_order_alipay
        set alipay_trade_no = CONCAT_WS('_', order_no, n + 1),
            n               = n + 1,
            update_time     = now()
        where order_no = #{orderNo}
    </update>
</mapper>